@model ProgramInputModel
@{
    ViewData["Title"] = "Edit Program";
}
@section StyleSheets{
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
}
<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Programs</a></li>
        <li class="breadcrumb-item active">@Model.ShortName</li>
    </ol>
</nav>

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShortName"></label>
        <input asp-for="ShortName" class="form-control">
        <span asp-validation-for="ShortName" class="text-danger"></span>
        <small id="shortNameHelp" class="form-text text-muted">
            Short Name cannot be longer than 50 characters.
        </small>
    </div>
    <div class="form-group">
        <label asp-for="Website"></label>
        <input asp-for="Website" class="form-control">
        <span asp-validation-for="Website" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <a class="btn btn-secondary mr-2" asp-action="Index">Cancel</a>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script>
        $(function () {
            $("textarea").summernote({
                height: 200,
                toolbar: [
                    // [groupName, [list of button]]
                    ["style", ["bold", "italic", "underline", "clear"]],
                    ["para", ["ul", "ol"]]
                ]
            });
        });
    </script>
}
