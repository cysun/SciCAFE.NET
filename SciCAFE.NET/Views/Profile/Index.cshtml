@model PasswordInputModel
@{
    ViewData["Title"] = "Profile";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item active">Profile</li>
    </ol>
</nav>

<div class="row row-cols-1 row-cols-md-2">
    <div class="col mb-4">
        <div class="card">
            <div class="card-header">
                Account
                <a class="btn btn-sm btn-secondary float-right" asp-action="Account"><i class="fas fa-edit"></i></a>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label>Name</label>
                    <span class="form-control">@ViewBag.User.Name</span>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <span class="form-control">@ViewBag.User.Email</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col mb-4">
        <div class="card h-100">
            <div class="card-header">
                Additional Information
                <a class="btn btn-sm btn-secondary float-right" asp-action="Account"><i class="fas fa-edit"></i></a>
            </div>
            <div class="card-body">

            </div>
        </div>
    </div>
    <div class="col mb-4">
        <div class="card h-100">
            <div class="card-header">
                Events
                <a class="btn btn-sm btn-secondary float-right" asp-action="Events"><i class="fas fa-eye"></i></a>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tbody>
                        <tr class="border-bottom"><td>Attended</td><td>@ViewBag.EventsAttendedCount</td></tr>
                        <tr class="border-bottom"><td>Organized</td><td>@ViewBag.EventsOrganizedCount</td></td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col mb-4">
        <div class="card h-100">
            <div class="card-header">
                Rewards
                <a class="btn btn-sm btn-secondary float-right" asp-action="Events"><i class="fas fa-eye"></i></a>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tbody>
                        <tr class="border-bottom">
                            <td>Earned</td>
                            <td>
                                <div class="spinner-border spinner-border-sm" role="status">
                                    <span class="sr-only">Loading...</span>
                                </div>
                            </td>
                        </tr>
                        <tr class="border-bottom"><td>Provided</td><td>@ViewBag.RewardsProvidedCount</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
