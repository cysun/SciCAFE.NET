@model PasswordInputModel
@{
    ViewData["Title"] = "Profile";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Profile</a></li>
        <li class="breadcrumb-item active">Account</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post">
            <div class="form-group">
                <label>Name</label>
                <span class="form-control">@ViewBag.User.Name</span>
            </div>
            <div class="form-group">
                <label>Email</label>
                <span class="form-control">@ViewBag.User.Email</span>
            </div>
            <div class="form-group">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
                <small id="passwordHelp" class="form-text text-muted">
                    Passwords must be at least six characters long, and contain at least one
                    uppercase character, one lowercase character, a digit, and a non-alphanumeric
                    character.
                </small>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <a class="btn btn-secondary mr-2" asp-controller="Profile" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

