@model List<User>
@{
    ViewData["Title"] = "Users";
}
<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item active">Users</li>
        <li class="ml-auto"><a asp-action="Add" class="btn btn-outline-primary btn-sm"><i class="fas fa-user-plus"></i></a></li>
    </ol>
</nav>

<table class="table table-hover">
    <thead>
        <tr><th>Name</th><th class="d-none d-md-table-cell">Email</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <span class="mr-2">@user.Name</span>
                    @if (user.IsAdministrator)
                    {
                        <span class="badge badge-success">Administrator</span>
                    }
                    @if (user.IsEventOrganizer)
                    {
                        <span class="badge badge-success">Event Organizer</span>
                    }
                    @if (user.IsRewardProvider)
                    {
                        <span class="badge badge-success">Reward Provider</span>
                    }
                </td>
                <td class="d-none d-md-table-cell">
                    @if (user.EmailConfirmed)
                    {
                        <a href="mailto:@user.Email">@user.Email</a>
                    }
                    else
                    {
                        @user.Email
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-secondary btn-sm">
                        <i class="fas fa-user-edit"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
