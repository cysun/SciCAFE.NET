@model List<Reward>
@{
    ViewData["Title"] = "Rewards";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item active">Rewards</li>
    </ol>
</nav>

@if (Model.Count == 0)
{
    <p>Currently there are no rewards.</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Expiration Date</th>
                <th class="d-none d-md-table-cell">Offered By</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reward in Model)
            {
                <tr>
                    <td><a asp-action="View" asp-route-id="@reward.Id">@reward.Name</a></td>
                    <td>@((reward.ExpireDate?? default(DateTime)).ToString("d"))</td>
                    <td class="d-none d-md-table-cell">@reward.Creator.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
